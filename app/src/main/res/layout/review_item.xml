<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/item_review"
        android:layout_width="343dp"
        android:layout_height="210dp"
        android:background="@drawable/review"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="28.09dp"
        android:layout_height="28.09dp"
        app:layout_constraintBottom_toBottomOf="@id/item_review"
        app:layout_constraintEnd_toEndOf="@+id/item_review"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="@id/item_review"
        app:layout_constraintTop_toTopOf="@id/item_review"
        app:layout_constraintVertical_bias="0.06999999"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/user_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa"
        android:hint="스폰지밥"
        android:textColorHint="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/user_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toEndOf="@+id/user_image"
        app:layout_constraintTop_toTopOf="@+id/user_image"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/user_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa"
        android:hint="남성/"
        android:textColorHint="@color/review_profile"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/user_image"
        app:layout_constraintEnd_toEndOf="@+id/user_nickname"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toEndOf="@+id/user_image"
        app:layout_constraintTop_toBottomOf="@+id/user_nickname"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/user_agearea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa"
        android:hint="20대"
        android:textColorHint="@color/review_profile"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/user_image"
        app:layout_constraintEnd_toEndOf="@+id/user_nickname"
        app:layout_constraintStart_toEndOf="@+id/user_gender"
        app:layout_constraintTop_toBottomOf="@+id/user_nickname"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/following_btn"
        android:layout_width="70.55dp"
        android:layout_height="25.59dp"
        android:background="@drawable/review_followingbtn"
        app:layout_constraintBottom_toBottomOf="@+id/user_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_image"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/review_bookmark"
        android:layout_width="25.57dp"
        android:layout_height="31.18dp"
        android:background="@drawable/review_bookmark_states"
        app:layout_constraintBottom_toBottomOf="@+id/following_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/review_movieimage"
        android:layout_width="100.81dp"
        android:layout_height="127.53dp"
        android:background="@drawable/movie02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_image"
        app:layout_constraintVertical_bias="0.341" />

    <TextView
        android:id="@+id/review_movietitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_bold"
        android:hint="her 그녀"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/review_movieimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toEndOf="@+id/review_movieimage"
        app:layout_constraintTop_toTopOf="@+id/review_movieimage"
        app:layout_constraintVertical_bias="0.0" />

    <RatingBar
        android:id="@+id/review_starscore"
        android:layout_width="241dp"
        android:layout_height="39dp"
        android:numStars="5"
        android:scaleX="0.3"
        android:scaleY="0.3"
        app:layout_constraintBottom_toBottomOf="@+id/review_movieimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/review_movietitle"
        app:layout_constraintVertical_bias="0.120000005" />

    <TextView
        android:id="@+id/review_core"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="너무나 재미있습니다 조심하십시오. 저는 여기에 영혼을 빼앗겨 버렸습니다. 여러분도 그렇게 되지 않으시길 바랍니다."
        android:textColorHint="@color/review_text"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/review_movieimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/review_movieimage"
        app:layout_constraintStart_toStartOf="@+id/review_movietitle"
        app:layout_constraintTop_toBottomOf="@+id/review_starscore"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/info_queue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/review_bookmark"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_core">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_drama"/>


        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@mipmap/ic_watcha_content"/>
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@mipmap/ic_tving_content"/>
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@mipmap/ic_wavve_content"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>